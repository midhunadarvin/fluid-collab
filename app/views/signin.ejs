        <!-- Add your site or application content here -->

        <% for(var i in messages) { %>
			<div class="flash"><%= messages[i] %></div>
		<% } %>

		<form action="/signin" method="post">
			<div>
				<label>Username:</label>
				<input type="text" name="username" />
			</div>
			<div>
				<label>Password:</label>
				<input type="password" name="password" />
			</div>
			<div>
				<input type="submit" value="Sign In" />
			</div>
		</form>

        <a href="" onclick="popupwindow('/oauth/facebook','Login with Facebook',500,350)">Sign in with Facebook</a><br/>
		<a href="/oauth/twitter">Sign in with Twitter</a><br/>
        <a href="/oauth/google">Sign in with Google</a>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.10.2.min.js"><\/script>')</script>

